[global]
    # Positioning
    monitor = 0
    follow = none
    width = (0, 550)
    height = 120
    origin = top-right
    offset = 20x20
    scale = 0

    # Progress Bar
    progress_bar = true
    progress_bar_height = 2
    progress_bar_frame_width = 0
    progress_bar_min_width = 120
    progress_bar_max_width = 300

    # Appearance
    transparency = 0
    corner_radius = 8
    frame_width = 0
    separator_height = 2
    separator_color= frame
    padding = 24
    horizontal_padding = 16
    text_icon_padding = 0

    # Text Formatting
    font = Inter 12
    line_height = 6
    markup = full
    format = "<b>%s</b>\n%b"
    alignment = left
    vertical_alignment = center
    ellipsize = middle
    ignore_newline = no

    # Icons
    icon_position = left
    min_icon_size = 0
    max_icon_size = 72

    # Behavior
    notification_limit = 5
    indicate_hidden = yes
    sort = yes
    idle_threshold = 0
    show_age_threshold = 60
    stack_duplicates = true
    hide_duplicate_count = true
    show_indicators = false
    sticky_history = false
    history_length = 0
    always_run_script = true

    # Mouse Actions
    mouse_left_click = close_current
    mouse_right_click = do_action, close_current
    mouse_middle_click = close_all

    # External Programs
    dmenu = /usr/bin/dmenu -p dunst:
    browser = /usr/bin/xdg-open

    # Advanced
    title = notification
    class = Dunst
    ignore_dbusclose = false
    force_xwayland = false
    force_xinerama = false

    # Styling
    frame_color = "#8aadf4"
    highlight = "#8aadf4"

