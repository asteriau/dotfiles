{
    // #region :: Window Settings
    "window.menuBarVisibility": "toggle",
    "window.titleBarStyle": "native",
    "window.customTitleBarVisibility": "never",
    // #endregion

    // #region :: Editor Settings
    "editor.fontSize": 14,
    "editor.fontFamily": "JetBrains Mono NL",
    "editor.tabSize": 2,
    "editor.lineHeight": 22,
    "editor.folding": true,
    // #endregion

    // #region :: Cursor Settings
    "editor.cursorStyle": "line-thin",
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": "on",
    // #endregion

    // #region :: Scrolling & Visibility
    "editor.smoothScrolling": true,
    "editor.renderWhitespace": "none",
    "editor.renderLineHighlight": "none",
    // #endregion

    // #region :: Scrollbar Settings
    "editor.scrollbar.verticalScrollbarSize": 10,
    "editor.scrollbar.horizontalScrollbarSize": 10,
    // #endregion

    // #region :: Minimap & Highlighting Settings
    "editor.minimap.enabled": false,
    "editor.semanticHighlighting.enabled": true,
    "editor.occurrencesHighlight": "off",
    // #endregion

    // #region :: Theme Settings
    "workbench.colorTheme": "Paradise",
    // #endregion

    // #region :: Terminal Settings
    "terminal.integrated.fontFamily": "JetBrains Mono NL",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.minimumContrastRatio": 1,
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.cursorBlinking": true,
    // #endregion

    // #region :: Workbench Settings
    "workbench.activityBar.location": "top",
    "workbench.layoutControl.enabled": false,
    "workbench.statusBar.visible": false,
    // #endregion

    // #region :: Command Center Settings
    "chat.commandCenter.enabled": false,
    "window.commandCenter": false,
    // #endregion

    // #region :: Disabling Telemetry
    "telemetry.telemetryLevel": "off",
    // #endregion
}
